<%= form_for @event, :url => events_path do |f| %>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>

    <%= f.label :description, "Description" %>
    <%= f.text_area :description %>

    <%= f.collection_select(:category_id, Category.all, :id, :name) %>

    <%= f.submit "Create" %>
<% end %>